{
	"productName": "BlueBuzzah Updater",
	"version": "1.0.0-beta.4",
	"identifier": "com.bluebuzzah.updater",
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devUrl": "http://localhost:5173",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "BlueBuzzah Updater",
				"width": 900,
				"height": 750,
				"minWidth": 800,
				"minHeight": 700,
				"resizable": true,
				"fullscreen": false,
				"decorations": true,
				"center": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": [
			"app",
			"dmg",
			"nsis"
		],
		"createUpdaterArtifacts": "v1Compatible",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"macOS": {
			"minimumSystemVersion": "10.13",
			"dmg": {
				"background": "assets/updater-bg.png",
				"windowSize": {
					"width": 620,
					"height": 480
				},
				"appPosition": {
					"x": 120,
					"y": 200
				},
				"applicationFolderPosition": {
					"x": 480,
					"y": 200
				}
			}
		}
	},
	"plugins": {
		"updater": {
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFDRUExMjRBRkU0OUNDMDcKUldRSHpFbitTaExxck9rRXc2QUJvNjgvM0M1VXVuK01kZWFSWGR3S0xJOU50bW5uTVlBUm4zUFcK",
			"endpoints": [
				"https://github.com/BlueBuzzah/BlueBuzzah-Updater/releases/latest/download/latest.json"
			],
			"windows": {
				"installMode": "passive"
			}
		}
	}
}